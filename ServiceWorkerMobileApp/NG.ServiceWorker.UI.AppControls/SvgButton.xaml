<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:common="clr-namespace:NG.ServiceWorker.UI"
    x:Class="NG.ServiceWorker.UI.SvgButton">
    <Grid x:Name="BindingTarget">
        <common:SvgImage SvgName="{Binding SvgName}" RenderColour="{Binding InternalIconColour}"/>
        <common:InvisibleButton ShowPressed="{Binding Pressed}" Command="{Binding Command}"/>
    </Grid>
</ContentView>
