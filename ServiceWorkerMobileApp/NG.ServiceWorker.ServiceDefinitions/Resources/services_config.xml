<?xml version="1.0" encoding="UTF-8" ?>

<services>
    <service type="NG.ServiceWorker.IApiService">
        <implementation type="NG.ServiceWorker.CoreServices.DefaultApiService"/>
    </service>
    <service type="NG.ServiceWorker.IFileService">
        <implementation type="NG.ServiceWorker.CoreServices.DefaultFileService"/>
    </service>
    <service type="NG.ServiceWorker.IFormsService">
        <implementation type="NG.ServiceWorker.CoreServices.DefaultFormsServices"/>
    </service>
    <service type="NG.ServiceWorker.IHttpService">
        <implementation type="NG.ServiceWorker.CoreServices.DefaultHttpService"/>
    </service>
    <service type="NG.ServiceWorker.IJsonService">
        <implementation type="NG.ServiceWorker.CoreServices.DefaultJsonService"/>
    </service>
    <service type="NG.ServiceWorker.IMainDataService">
        <implementation type="NG.ServiceWorker.CoreServices.MainData.SqliteMainDataService"/>
    </service>
    <service type="NG.ServiceWorker.ISvgService">
        <implementation type="NG.ServiceWorker.CoreServices.DefaultSvgService"/>
    </service>

    <!-- Custom namespace service -->
    <service type="NG.ServiceWorker.ILogService">
        <implementation type="NG.ServiceWorker.CoreServices.SqliteLogging.SqliteLogService"/>
    </service>
    <service type="NG.ServiceWorker.ISqliteService">
        <implementation type="NG.ServiceWorker.CoreServices.SqliteDatabases.DefaultSqliteService"/>
    </service>

    <!-- UI services -->
    <service type="NG.ServiceWorker.UIServices.IUserInterfaceViewFactoryService">
        <implementation type="NG.ServiceWorker.UIServices.CoreUIServices.DefaultUserInterfaceViewFactoryService"/>
    </service>

    <!-- Platform specific services -->
    <service type="NG.ServiceWorker.IFileSystemService">
        <implementation flag="iOS" type="NG.ServiceWorker.CoreServices.iOSServices.iOSFileSystemService"/>
        <implementation flag="Android" type="NG.ServiceWorker.CoreServices.AndroidServices.AndroidFileSystemService"/>
        <implementation flag="UWP" type="NG.ServiceWorker.CoreServices.UwpServices.UwpFileSystemService"/>
    </service>
    <service type="NG.ServiceWorker.IThreadService">
        <implementation type="NG.ServiceWorker.CoreServices.BaseThreadService"/>
    </service>
</services>
