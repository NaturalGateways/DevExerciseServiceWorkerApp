<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="NG.ServiceWorker.ContactsUI.ContactListItemView">
    <ContentView.GestureRecognizers>
        <TapGestureRecognizer Command="{Binding TappedCommand}"/>
    </ContentView.GestureRecognizers>
    <Grid Style="{StaticResource BackgroundGrid}" HeightRequest="80">
        <Grid RowDefinitions="Auto,Auto,Auto" Margin="16,4,8,4" RowSpacing="4" VerticalOptions="Center">
            <Label Grid.Row="0" Text="{Binding DisplayName}" FontSize="18" FontAttributes="Bold" MaxLines="1"/>
            <Label Grid.Row="1" Text="{Binding BusinessName}" FontSize="16" MaxLines="1"/>
            <Label Grid.Row="2" Text="{Binding Address}" Style="{StaticResource DullLabel}" FontAttributes="Italic" MaxLines="1"/>
        </Grid>
    </Grid>
</ContentView>
